<resources>

    <style name="Theme.MyApp" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Original AppCompat attributes. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_200</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:colorBackground">@color/surface</item>
        <item name="android:textColor">@color/text_high_emphasis</item>
        <item name="android:textColorPrimary">@color/text_high_emphasis</item>
        <item name="android:textColorSecondary">@color/text_high_emphasis</item>
        <item name="android:textColorHighlight">@color/text_high_emphasis</item>
        <item name="android:textColorPrimaryInverse">@color/text_medium_emphasis</item>
        <item name="android:textColorSecondaryInverse">@color/text_medium_emphasis</item>
        <!-- style -->
        <item name="materialButtonStyle">@style/Widget.MyApp.MyButton</item>
        <item name="materialCardViewStyle">@style/Widget.MyApp.MyCard</item>
        <item name="tabStyle">@style/Widget.MyApp.TabLayout</item>
    </style>

    <style name="Widget.MyApp.MyButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_high_emphasis</item>
        <item name="android:textColorPrimary">@color/text_high_emphasis</item>
        <item name="android:textColorSecondary">@color/text_high_emphasis</item>
        <item name="android:textColorHighlight">@color/text_high_emphasis</item>
        <item name="android:textColorPrimaryInverse">@color/text_medium_emphasis</item>
        <item name="android:textColorSecondaryInverse">@color/text_medium_emphasis</item>
    </style>

    <style name="Widget.MyApp.MyCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="Widget.MyApp.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/text_high_emphasis</item>
        <item name="android:background">@color/primary</item>
        <item name="tabIndicatorColor">@color/text_high_emphasis</item>
        <item name="tabRippleColor">@color/secondary_300</item>
    </style>

    <style name="Widget.MyApp.Toolbar" parent="Widget.MaterialComponents.Toolbar">

    </style>
</resources>

