<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="2dp"
                android:padding="8dp">

    <ImageView
        android:id="@+id/imageView_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:maxHeight="117dp"
        android:maxWidth="88dp"
        android:src="@mipmap/blank"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_item"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView_item"
        android:layout_toRightOf="@+id/imageView_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="@string/comic_title"
            android:textSize="19sp"/>

        <TextView
            android:id="@+id/tv_description_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="@string/desc_capture"
            android:textColor="#98000000"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_read_info_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:gravity="center"
            android:textColor="#98000000"
            android:textSize="16sp"/>

    </LinearLayout>

</RelativeLayout>