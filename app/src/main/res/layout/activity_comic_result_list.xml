<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ComicResultListActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/loading_layout_search_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/pb_search_result_wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/loading_search_result"
            android:textColor="#8b8a8a"
            android:textSize="10sp"/>
    </LinearLayout>

    <org.huxizhijian.hhcomicviewer2.view.LoadPageListView
        android:id="@+id/listView_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/list_comic_divider"
        android:dividerHeight="2dp"
        android:visibility="gone"/>

</LinearLayout>