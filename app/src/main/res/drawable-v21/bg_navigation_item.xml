    <item>
        <selector>
            <item android:state_checked="true">
                <shape>
                    <solid android:color="@color/secondary" />
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="@color/surface" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/surface" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>